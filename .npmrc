# pnpm configuration for Vercel deployment
# Fix for ERR_INVALID_THIS errors during package installation

# Fetch settings
fetch-retries=10
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=180000
fetch-timeout=300000

# Network settings
network-concurrency=1
prefer-offline=true

# Registry settings
registry=https://registry.npmjs.org/

# Disable strict peer dependencies to avoid conflicts
strict-peer-dependencies=false

# Enable shamefully-hoist for better compatibility
shamefully-hoist=true
